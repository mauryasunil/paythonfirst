<ItemScreen>:
    name: "items"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        MDTopAppBar:
            title: "Item Master"
            left_action_items: [["menu", lambda x: app.go_dashboard()]]

        MDTextField:
            id: item_name
            hint_text: "Item Name"

        MDTextField:
            id: descreption
            hint_text: "Descreption"

        MDTextField:
            id: category
            hint_text: "Category"
            readonly: True
            on_focus:
                if self.focus: root.open_category_menu(self)

        MDTextField:
            id: subcategory
            hint_text: "Sub Category"
            readonly: True
            on_focus:
                if self.focus: root.open_subcategory_menu(self)

        MDTextField:
            id: uom
            hint_text: "UOM (Unit)"
            readonly: True
            on_focus:
                if self.focus: root.open_uom_menu(self)

        MDTextField:
            id: gst
            hint_text: "GST %"
            readonly: True
            on_focus:
                if self.focus: root.open_gst_menu(self)
        MDTextField:
            id: hsn
            hint_text: "HSN Code"


        MDRaisedButton:
            text: "SAVE ITEM"
            on_release: root.save_item()

        MDSeparator:

        ScrollView:
            MDList:
                id: item_list
